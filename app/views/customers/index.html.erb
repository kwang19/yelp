<div class="page-header">
  <h1>
    Customers
    <a href="/customers/new" class="btn btn-lg btn-success">New Customer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.email %></td>
        <td><%= customer.password %></td>
        <td>
          <a href="/customers/<%= customer.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
