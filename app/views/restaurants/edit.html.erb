<!-- Validation failure messages -->
<% if @restaurant.errors.any? %>
  <% @restaurant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restaurant #<%= @restaurant.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restaurant/<%= @restaurant.id %>" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @restaurant.description %>">
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @restaurant.address %>">
      </div>

      <!-- Label and input for website -->
      <div class="form-group">
        <label for="website" class="control-label">
          Website
        </label>

        <input type="text" id="website" name="website" placeholder="Website" class="form-control" value="<%= @restaurant.website %>">
      </div>

      <!-- Label and input for coverphoto -->
      <div class="form-group">
        <label for="coverphoto" class="control-label">
          Coverphoto
        </label>

        <%= cl_image_tag(@restaurant.coverphoto.to_s, :width => 90, :height => 90, :crop => :thumb) %>
        <input type="file" id="coverphoto" name="coverphoto" class="form-control">
      </div>

      <!-- Label and input for restaurants_id -->
      <div class="form-group">
        <label for="restaurants_id" class="control-label">
          Restaurants
        </label>

        <input type="text" id="restaurants_id" name="restaurants_id" placeholder="Restaurants" class="form-control" value="<%= @restaurant.restaurants_id %>">
      </div>

      <!-- Label and input for restaurant_name -->
      <div class="form-group">
        <label for="restaurant_name" class="control-label">
          Restaurant name
        </label>

        <input type="text" id="restaurant_name" name="restaurant_name" placeholder="Restaurant name" class="form-control" value="<%= @restaurant.restaurant_name %>">
      </div>

      <!-- Label and input for tag -->
      <div class="form-group">
        <label for="tag" class="control-label">
          Tag
        </label>

        <input type="text" id="tag" name="tag" placeholder="Tag" class="form-control" value="<%= @restaurant.tag %>">
      </div>

      <!-- Label and input for average_rating -->
      <div class="form-group">
        <label for="average_rating" class="control-label">
          Average rating
        </label>

        <input type="text" id="average_rating" name="average_rating" placeholder="Average rating" class="form-control" value="<%= @restaurant.average_rating %>">
      </div>

      <!-- Label and input for review_count -->
      <div class="form-group">
        <label for="review_count" class="control-label">
          Review count
        </label>

        <input type="text" id="review_count" name="review_count" placeholder="Review count" class="form-control" value="<%= @restaurant.review_count %>">
      </div>

      <button class="btn btn-warning">
        Update Restaurant
      </button>
      or
      <a href="/restaurants/<%= @restaurant.id %>">Cancel</a>
    </form>
  </div>
</div>
